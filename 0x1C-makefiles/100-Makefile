.PHONY = all clean oclean fclean re

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(call OBJ)
	$(call CC) $(call OBJ) -o $(call NAME)
       
.o: .c m.h
	$(call CC) $(call CFLAGS)    -c -o $@ $<

clean:
	$(call RM) *~ $(call NAME)

oclean:
	$(call RM) $(call OBJ)

fclean: clean oclean

re: oclean all

